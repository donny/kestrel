{{#paper-dialog fullscreen=fullscreen onClose=(action okAction) clickOutsideToClose=true}}
  {{#paper-dialog-content}}
    <h2 class="md-title">{{header}}</h2>
    <div class="layout-row">
      <div class="layout-column flex-100">
        {{message}}
      </div>
    </div>
  {{/paper-dialog-content}}
  {{#paper-dialog-actions class="layout-row"}}
    {{#paper-button primary=true onClick=(action okAction)}}OK{{/paper-button}}
  {{/paper-dialog-actions}}
{{/paper-dialog}}
